<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".ui.MainActivity">

    <!-- Header with Logo -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="60dp"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Animated orbit rings (placeholder) -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/ic_stream"
                android:layout_gravity="center"
                android:alpha="0.15" />

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_stream"
                android:contentDescription="@null" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_main"
            android:textSize="36sp"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_main"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Network Status Card -->
    <LinearLayout
        android:id="@+id/networkStatusCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        android:background="@drawable/bg_status_card"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_status"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:layout_marginBottom="16dp" />

        <!-- Bondix Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:id="@+id/bondixStatusIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/status_indicator" />

            <TextView
                android:id="@+id/bondixStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                tools:text="Bondix: Connected" />
        </LinearLayout>

        <!-- WiFi Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <View
                android:id="@+id/wifiStatusIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/status_indicator" />

            <TextView
                android:id="@+id/wifiStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                tools:text="WiFi: Connected" />
        </LinearLayout>

        <!-- Cellular Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/cellularStatusIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/status_indicator" />

            <TextView
                android:id="@+id/cellularStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                tools:text="Cellular: Connected" />
        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartStream"
            style="@style/Widget.OrbiStream.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/btn_start_stream"
            android:textSize="16sp"
            app:icon="@drawable/ic_stream"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.OrbiStream.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/btn_settings"
            android:textSize="16sp"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

